# Blue/Green stage 3 env example (no secrets)
ACTIVE_POOL=blue

# Slack webhook: set this to your Slack incoming webhook (do NOT commit real secrets)
SLACK_WEBHOOK_URL=

# Alerting thresholds
ERROR_RATE_THRESHOLD=2
WINDOW_SIZE=200
ALERT_COOLDOWN_SEC=300

# Nginx public port
NGINX_PUBLIC_PORT=8080
NGINX_URL=http://bg_nginx

# Image tags (example)
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Release IDs for apps (required by watcher)
RELEASE_ID_BLUE=v1.0-blue
RELEASE_ID_GREEN=v1.0-green

